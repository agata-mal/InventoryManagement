@model InventoryService.ViewModels.VM_Item

@{
    ViewBag.Title = "DeleteItem";
}
@using InventoryService.Enums
<p>
    <a href="/Item/ItemIndex" class="glyphicon glyphicon-arrow-left aBackToList">

    </a>
    <span class="aBackToList"> Wróć do listy</span>
</p>

<h2>Usuń produkt</h2>



<div>

    <hr />
    <h3>Czy chcesz usunąć ten produkt?</h3>
    <dl class="dl-horizontal dd-dtDeleteItem">
        <dt>
            Kod produktu
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ItemNumber)
        </dd>

        <dt>
            Nazwa produktu
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ItemName)
        </dd>

        <dt>
            Jm
        </dt>

        <dd>
            @Model.Unit.GetDisplayName()
        </dd>
        <dt>
            Oczekiwana ilość
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ExpectedAmount)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Usuń" class="btn btn-default button" /> 
          
        </div>
    }
</div>
