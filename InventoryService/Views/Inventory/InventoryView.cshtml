@model IEnumerable<InventoryService.ViewModels.VM_Item>

@{
    ViewBag.Title = "InventoryView";
}

<h2>Tryb Inwentaryzacji</h2>


<table class="table">
    <tr>
        <th>
            Kod produktu
        </th>
        <th>
            Nazwa produktu
        </th>

        <th>
            Stan rzeczywisty
        </th>
        <th>

        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ItemNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ItemName)
            </td>

            <td>
                <div class="col-md-10">
                    @Html.EditorFor(modelItem => item.RealAmount, new { htmlAttributes = new { @class = "form-control", id = "realAmount"+item.Id }  })
                    @Html.ValidationMessageFor(modelItem => item.RealAmount, "", new { @class = "text-danger" })

                </div>
            </td>
            <td>
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Zapisz" class="btn btn-default btnSave" data-href="@item.Id" />
                </div>
            </td>

        </tr>

    }

</table>
@Scripts.Render("~/Scripts/ViewScripts/InventoryScript")